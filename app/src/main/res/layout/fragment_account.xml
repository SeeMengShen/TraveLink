<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.AccountFragment">

    <ImageView
        android:id="@+id/accountProfilePictureImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/accountNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountProfilePictureImageView" />

    <TextView
        android:id="@+id/accountEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountNameTextView" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountEmailTextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accountSettingsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountSettings"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/accountChangePasswordBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountChangePassword"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                app:icon="@drawable/baseline_password_24" />

            <Button
                android:id="@+id/accountEditDetailsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountEditDetailsStr"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                app:icon="@drawable/baseline_edit_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="30dp">

            <TextView
                android:id="@+id/accountMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountMore"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/accountFeedbackBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountFeedback"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                app:icon="@drawable/baseline_feedback_24" />

            <Button
                android:id="@+id/accountAboutUsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountAboutUs"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                app:icon="@drawable/baseline_info_24" />

            <Button
                android:id="@+id/accountLogoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountLogout"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                app:icon="@drawable/baseline_logout_24" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>